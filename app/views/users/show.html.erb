<div class="user-item">
  <div class="user-image">
    <% if @user.photo.present? %>
      <%= image_tag @user.photo, alt: @user.name, width: '100' %>
    <% else %>
      <%= image_tag 'profile-image.png', alt: @user.name, width: '100' %>
    <% end %>
  </div>
  <div class="user-info">
    <h2><%= @user.name %></h2>
    <div class="user-posts">
      <p>Number of Posts: <%= @user.posts_counter %></p>
    </div>
  </div>
</div>
<div class="bio">
  <h2>Bio</h2>
  <p><%= @user.bio %></p>
</div>
<div class="posts">
  <% @user.recent_posts.each do |post| %>
    <div class="post">
      <h3><%= link_to post.title, user_post_path(@user, post) %>
</h3>
      <p><%= post.text %></p>
      <div class="comment-likes-container">
        <p>Comments: <%= post.comments.count %></p>
        <p>Likes: <%= post.likes.count %></p>
      </div>
    </div>
  <% end %>
</div>
<div class="all-posts-button">
  <%= link_to user_posts_path(@user) do %>
    <button>See all posts</button>
  <% end %>
  <%= link_to new_user_post_path(@user), method: :get do %>
    <button>Create Post</button>
  <% end %>
</div>