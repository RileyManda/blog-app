<h1>User List</h1>
<ul>
  <% @users.each do |user| %>
    <li class="user-item">
      <%= image_tag user.photo, alt: user.name, width: '100' %>
      <div class="user-info">
        <h2><%= user.name %></h2>
        <p>Number of Posts: <%= user.posts_counter %></p>
      </div>
    </li>
  <% end %>
</ul>
